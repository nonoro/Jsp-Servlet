<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--        각 예외타입별 예외처리 등록하기-->
    <!--        exception-type(NumberFormatException) 에러가 나면 location(/ex1005/exception/ex02/error/number.jsp) 이 경로로 가라-->
    <error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/step06_JspExam/ex1005/exception/ex02/error/number.jsp</location>
    </error-page>

    <!--    exception-type(ArithmeticException) 에러가 나면 location(/ex1005/exception/ex02/error/arith.jsp) 이 경로로 가라-->
    <error-page>
        <exception-type>java.lang.ArithmeticException</exception-type>
        <location>/step06_JspExam/ex1005/exception/ex02/error/arith.jsp</location>
    </error-page>

</web-app>